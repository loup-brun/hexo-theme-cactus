#header
  padding: 2rem 0 1rem
  border-bottom: 1px solid $color-accent-1
  text-align: center

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    font-style: normal
    font-size: 1.2rem
    line-height: normal

    antialias()
    
  @media (min-width: 900px)
    h1, .h1
      font-size: 2rem

  a
    background: none
    color: inherit
    text-decoration: none

  #logo
    display: inline-block
    float: left
    margin-right: 1rem
    margin-bottom: 0.5rem
    width: $logo-width
    height: $logo-height
    background-color: $color-background
    padding: 1rem
    background-size: $logo-width $logo-height
    background-repeat: no-repeat

  .nav
    color: $color-accent-1
    letter-spacing: .01em
    font-style: normal
    font-size: .65rem

    ul
      margin: 0
      padding: 0
      list-style-type: none
      line-height: 15px

      a
        margin-right: 1.2em
        color: color-accent-1
        display: inline-block
        padding-top: 0.5em
        padding-bottom: 0.5em

      a:hover
        underline(5px, $color-accent-1)

      li
        display: inline-block
        margin-right: 15px
        border-right: 1px dotted $color-accent-1
        vertical-align: middle

      .icon
        display: none

      li:last-child
        margin-right: 0
        border-right: 0

        a
          margin-right: 0
  
  @media screen and (min-width: 480px)
    .nav
      font-size: .8rem

.article-banner
  padding-bottom: 20%
  padding-bottom: calc(3rem + 15%)
  background-size: cover
  background-position: center center
  background-repeat: no-repeat
  margin: 1rem 0
