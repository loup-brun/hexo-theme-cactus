.ajax-gallery
  display: flex
  flex-flow: row wrap
  justify-content: center
  align-content: space-between

.gallery-thumb
  overflow: hidden
  margin: 0 1% 1% 0
  background-color: $color-accent-1
  position: relative
  background-image: url('/images/tail-spin.svg')
  background-position: center center
  background-repeat: no-repeat
  width: 32%
  height: 0
  padding-bottom: 32%
  float: left /* fallback; overridden by flexbox */
  
  &:hover
    .gallery-thumb__overlay
      opacity: 1  
  img
    width: 100%
    display: block
    position: absolute
    margin: 0

@media (min-width: 800px)
  .gallery-thumb
    width: $gallery-thumb-size
    padding-bottom: $gallery-thumb-size

@media (min-width: 900px)
  .gallery-thumb
    margin: 0 3% 3% 0

.gallery-thumb__overlay
  opacity: 0
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: rgba(0,0,0,0.7)
  padding: 10%
  text-align: center
  color: #fff
  display: flex
  align-items: center
  justify-content: center
  a
    color: #fff
  .view
    font-size: 1.6rem
    .icon
      display: inline-block
      padding: 0.75rem
  .download
    position: absolute
    bottom: 0.2rem
    right: 0.2rem
    padding: 0.2rem
    font-size: 1rem
    .icon
      display: inline-block
      padding: 0.2rem

@media (min-width: 600px)
  .gallery-thumb__overlay
    .view
      font-size: 2.2rem
    .download
      font-size: 1.5rem
    
