
.gallery-thumb
  overflow: hidden
  margin: 0 1% 1% 0
  background-color: $color-accent-1
  position: relative
  background-image: url('/images/tail-spin.svg')
  background-position: center center
  background-repeat: no-repeat
  width: $gallery-thumb-size
  height: $gallery-thumb-size
  display: inline-block
  
  &:hover
    .gallery-thumb__overlay
      opacity: 1  
  img
    width: 100%
    height: 100%
    display: block
    margin: 0

@media (min-width: 760px)
  .gallery-thumb
    width: $gallery-thumb-size
    height: $gallery-thumb-size
    float: none
    display: inline-block

.gallery-thumb__overlay
  opacity: 0
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: rgba(0,0,0,0.7)
  padding: 10%
  text-align: center
  color: #fff
  display: flex
  align-items: center
  justify-content: center
  .icon
    font-size: 2rem