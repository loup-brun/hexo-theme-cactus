.content
  header
    padding: 1rem 0
    margin-bottom: 2rem
    border-bottom: 1px solid #ddd
    .meta
      margin-top: 0
      margin-bottom: 1rem

    .meta *
      color: $color-accent-3
      font-size: .85rem

    .author
      text-transform: uppercase

    .postdate
      display: inline
    .posttitle
      margin-top: 0
  img
    box-shadow: 0 3px 6px 1px rgba(0,0,0,0.25)
    padding: 3% 3% 12%
    transform: rotate(1.2deg)
    background-color: $color-background
    position: relative
  img:nth-child(3n + 0)
    transform: rotate(-1.1deg)
    margin-top: -2rem

img, video
  display: block
  margin: auto
  max-width: 100%
  height: auto

/* http://webdesignerwall.com/tutorials/css-elastic-videos */
.video-container
  position: relative
  overflow: hidden
  padding-top: (9 / 16 * 100)% // 16:9 ratio
  height: 0

  iframe, object, embed
    position: absolute
    top: 0
    left: 0
    margin-top: 0
    width: 100%
    height: 100%

blockquote
  margin: 2rem 0
  padding: 2rem 1rem
  background: inherit
  color: $color-quote
  font-size: 1.8rem
  border-top: 1px solid $color-accent-1
  border-bottom: 1px solid $color-accent-1

  p
    margin: 0 !important
    line-height: 1.62
    text-align: center
  &+p
    margin-bottom: 1em
  
  @media (min-width: 800px)
    font-size: 2.5vw
      

  footer
    margin: line-height 0
    color: $color-meta
    font-size: 11px

    a
      background-image: linear-gradient(transparent, transparent 5px, $color-meta 5px, $color-meta)
      color: $color-meta

    a:hover
      background-image: linear-gradient(transparent, transparent 4px, lighten($color-meta, 20%) 4px, lighten($color-meta, 20%))
      color: lighten($color-meta, 20%)

    cite
      &:before
        padding: 0 .5em
        content: "â€”"

.pullquote
  margin: 0
  width: 45%
  text-align: left

  &.left
    margin-right: 1em
    margin-left: .5em

  &.right
    margin-right: .5em
    margin-left: 1em

.caption
  position: relative
  display: block
  margin-top: .5em
  color: color-grey
  text-align: center
  font-size: .9em

.article-tag
  .tag-link
    &:before
      content: "#"

    underline(10px, $color-link)

.post-footer
  padding: 2rem 0
  margin-top: 2rem
  border-top: 1px solid #ddd

@media (min-width: 480px)
  .article-tag
    display: inline

    &:before
      content: "|"
