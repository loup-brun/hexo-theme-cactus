@import "_variables"
@import "_colors/" + $colors
@import "_util"
@import "_mixins"
@import "_extend"
@import "_fonts"

global-reset()

::selection
  background-color: rgba($color-accent-1, 0.35)
  color: #fff
::-moz-selection
  background-color: rgba($color-accent-1, 0.35)
  color: $color-accent-2

*, *:before, *:after
  box-sizing: border-box

html
  height: 100%
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body
  padding: 0
  margin: 0
  display: flex
  flex-direction: column
  background-color: $color-background
  color: $color-text
  font-weight: 400
  font-size: $font-size
  font-family: $font-family-body
  line-height: $line-height
  text-rendering: geometricPrecision

  antialias()

@media (min-width: 700px)
  body
    font-size: $font-size-lg

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6
  font-family: $font-family-serif
  font-weight: 900
  margin: 0.2em 0 0.05em
  line-height: 1
h1, .h1
  font-size: 2.5em

@media (min-width: 900px)
  h1, .h1
    font-size: 7vw

.content
  margin: 0 auto
  flex: 1

  p
    hyphens(auto)
    margin: 0 0 2em

  code
    hyphens(manual)

  a
    color: $color-text
    text-decoration: none
    position: relative
    
    underline(5px, $color-text)
    &:hover
      background-image: linear-gradient(transparent, transparent 4px, $color-link 4px, $color-link)
      background-color: rgba($color-accent-1, 0.35)
      color: $color-text
    &:active
      background-color: rgba($color-accent-1, 0.95)

    &[href*="http"]:hover::before, 
    &[data-internal]:hover::before
      content: attr(href)
      display: block
      position: absolute
      top: -1.65em
      opacity: 0.95
      padding: 0em 0.35em 0em 0.25em
      background: $color-accent-1
      color: #fff
      letter-spacing: 0.015rem
      font-size: 0.8rem
      white-space: nowrap
    &[data-internal]:hover::before
      content: attr(title)
  a.icon
    background: none

    &:hover
      color: $color-link

  h1 a, .h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
    background: none
    color: inherit
    text-decoration: none

  h1 a:hover, .h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover
    underline(6px, $color-link)

  h6 a
    background: none
    color: inherit
    text-decoration: none

  h6 a:hover
    underline(6px, $color-link)

.centered-content
  text-align: center

.emoji
  font-family:'apple color emoji','segoe ui emoji','notocoloremoji','segoe ui symbol','android emoji','emojisymbols','emojione mozilla'

@media (min-width: 540px)
  .image-wrap
    flex-direction: row
    margin-bottom: 2rem

    .image-block
      flex: 1 0 35%
      margin-right: 2rem

    p
      flex: 1 0 65%

.max-width
  max-width: $page-width

@media (max-width: 480px)
  // smaller margins at smaller screen widths
  .px3
    padding-right: 0.8rem
    padding-left: 0.8rem
  .mx3
    margin-right: 0.8rem
    margin-left: 0.8rem

  .my4
    margin-top: 2rem
    margin-bottom: 2rem


@import "_partial/header"
@import "_partial/post/actions_desktop"
@import "_partial/post/actions_mobile"
@import "_partial/index"
@import "_partial/ajax-gallery"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/comments"
@import "_partial/footer"
@import "_partial/pagination"
@import "_partial/search"
// Code
@import "_highlight/" + $highlight

pre
  overflow-x: auto
  padding: 0.5rem 1rem 0.3rem
  border: 1px dotted $color-border
  border-radius: 4px
  font-size: 14px
  font-family: $font-family-mono
  line-height: 22px
  -webkit-border-radius: 4px

  code
    display: block
    padding: 0
    border: none

code
  padding: 0 5px
  border: 1px dotted $color-border
  border-radius: 2px
  -webkit-border-radius: 2px

.highlight
  overflow-x: auto
  margin: 1rem 0
  padding: 10px 15px
  border-radius: 4px
  background: $color-background-code
  font-family: $font-family-mono
  // color: $color-accent-3
  -webkit-border-radius: 4px

  figcaption
    margin: -5px 0 5px
    color: $color-meta-code
    font-size: .9em
    zoom: 1

    a
      float: right
      color: $color-meta-code
      font-style: italic
      font-size: .8em

      underline(10px, $color-link)

    a:hover
      color: lighten($color-meta-code, 20%)

    &:before, content: ""
      display: table

    &:after
      clear: both

  pre
    padding: 0
    border: none
    background: none

  table
    width: auto

  td.gutter
    text-align: right

  .line
    height: 22px

.hero
  padding: 0 2rem
  margin-top: 2rem
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
.hero-logo
  width: 10rem
  height: auto
  max-width: 100%
  flex-basis: 2
  display: block
  margin: 2rem
.hero-description
  text-align: center
  margin: 0 auto

