<div class="index">
  <section class="hero">
    <% if (theme.hero_logo) { %>
      <img src="<%- url_for(theme.hero_logo) %>" alt="<%= config.title %>" class="hero-logo" />
    <% } %>
    
    <% if (config.description) { %>
      <div class="hero-description">
        <%- markdown(config.description) %>
      </div>
    <% } %>
  </section>

  <div class="content px3 mx-auto max-width">
    <section id="writing">
      <span class="h1"><a href="<%- url_for(config.archive_dir) %>"><%= __('index.articles') %></a></span>
      <ul class="post-list">
        <% if (theme.posts_overview.show_all_posts) { %>
          <% var show_posts = page.posts.sort('date', 'desc') %>
        <% } else { %>
          <% var show_posts = site.posts.sort('date', 'desc').limit(theme.posts_overview.post_count || 5) %>
        <% } %>
        <% show_posts.each(function(post, i){ %>
          <li class="post-item">
            <%- partial('_partial/post/date', { post: post, class_name: 'meta' }) %>
            <span><%- partial('_partial/post/title', { post: post, index: true, class_name: '' }) %></span>
          </li>
        <% }); %>
      </ul>
      <% if (theme.posts_overview.show_all_posts) { %>
        <%- partial('_partial/pagination') %>
      <% } %>
    </section>

    <% if (site.data.projects) { %>
    <section id="projects">
      <span class="h1"><a href="<%- url_for(theme.projects_url) %>"><%= __('index.projects') %></a></span>
      <ul class="project-list">
        <% for(var obj in site.data.projects){ %>
          <li class="project-item">
            <a href="<%= site.data.projects[obj].url %>"><%= site.data.projects[obj].name %></a>: <%- markdown(site.data.projects[obj].desc) %>
          </li>
        <% } %>
      </ul>
    </section>
    <% } %>

    <section id="social">
        <span class="h1"><%- __('index.social_media') %></span>
      <% if (theme.social_links) { %>
        <p>
          <%= __('index.find_me_on') %>
          <% var nb_links = Object.keys(theme.social_links).length %>
          <% var i = 0 %>
          <% for(var link in theme.social_links) { %>
            <% if (link == 'mail') { %>
              <a class="icon" target="_blank" href="<%- url_for(theme.social_links[link]) %>">
                <i class="fas fa-envelope"></i><!--
          ---></a><!--
          ---><% } else { %>
              <a class="icon" target="_blank" href="<%- url_for(theme.social_links[link]) %>">
                <i class="fab fa-<%= link %>"></i><!--
          ---></a><!--
        ---><% } %><!--
        ---><%= ( nb_links > 0 && i < nb_links-1 ? 
                ( i == nb_links-2 ? ' '+__('index.enum_and')+' ' 
                : __('index.enum_comma')+' ' ) 
                : '.' ) %>
            <% i+=1 %>
          <% } %>
        </p>
      <% } %>

      <% if (config.feed || config.rss) { %>
        <p>Abonnez-vous via <a href="<%- url_for(config.feed.path || '/rss.xml') %>" class="icon"><i class="fas fa-rss"></i></a>.</p>
      <% } %>
    </section>
  </div>
  
    <div class="mx-auto max-width my3">
      <hr>
    </div>

  <section class="px3 centered-content" id="photos">
    <header class="max-width mx-auto">
      <span class="h1">DerniÃ¨res photos</span>
    </header>
    
    <div class="content">
      <p>Utilisez le mot-clic <a href="https://www.instagram.com/explore/tags/golau/" target="_blank">#GoLAU</a> et taguez <a href="https://www.instagram.com/athlaurentides" target="_blank">@athlaurentides</a>.</p>
      <p>Retrouvez + de <span class="emoji">ðŸ“·</span> sous la section <a href="<%- url_for('/photos/') %>">photos</a>.</p>
    </div>
    
    <div class="max-width-4 mx-auto">
      <%- partial('_partial/ajax-gallery', { album: theme.indexAlbumID, limit: theme.indexGalleryLimit || 12,  service: 'lychee', service_url: theme.lychee_url }) %>
    </div>
  </section>
</div>
